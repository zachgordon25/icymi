<p id="notice"><%= notice %></p>

<body id="artist-body">

    <div class="container index">
    
        <h1 class="title"><big><strong>In Case You Missed It</strong></big></h1>
    
        <% @artists.sort_by{ |artist| artist.name }.each do |artist| %>
            <div class="artists">
                
                <div class="artist-image">
                    <a href="/artists/<%= artist.id %>/shows">
                        <img class="artist-img" src=<%= artist.img %> alt=<%= artist.name %> >
                    </a>
                </div>
            
                <div class="artist-name">
                    <a href="/artists/<%= artist.id %>/shows">
                        <h1><%= artist.name %></h1>
                    </a>
                </div>

            </div>
        <% end %> 

    </div>

</body>
